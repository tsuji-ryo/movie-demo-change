<div class="review">
  <div class="review-rating" data-score="<%= review.rating %>"></div>
  <p class="review-comment"><%= review.comment %></p>

  <% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
      <div class="links btn-group" %>
        <%= link_to "編集", edit_play_review_path(review.play, review), class: "btn btn-custom" %>
        <%= link_to "削除", play_review_path(review.play, review), method: :delete, data: { confirm: "本当に削除していいですか?" }, class: "btn btn-custom" %>
      </div>
    <% end -%>
  <% end -%>
</div>

