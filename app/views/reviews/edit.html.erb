<div class="col-md-10 col-md-offset-1">
  <div class="edit-review-form">
    <h1> レビュー編集 </h1>
      <%= simple_form_for([@play, @review]) do |f| %>
        <div id="rating-form">
          <label> レビュー </label>
        </div>
        <%= f.input :comment, label: "コメント" %>
        <%= f.button :submit, :class => "btn-custom2" %>
      <% end %>
  </div>
</div>


<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>